<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/BTNCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="312dp"
        android:text="YIPPIEE"
        app:layout_constraintBottom_toTopOf="@+id/botonVerNotas"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonVerNotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Notas(WIP)"
        app:layout_constraintEnd_toEndOf="@+id/BTNCL"
        app:layout_constraintStart_toStartOf="@+id/BTNCL"
        tools:layout_editor_absoluteY="396dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/botonCrearNotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Notas(WIP)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/botonVerNotas"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/botonVerNotas"
        app:layout_constraintTop_toBottomOf="@+id/botonVerNotas" />

</androidx.constraintlayout.widget.ConstraintLayout>