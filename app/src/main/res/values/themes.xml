<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.ProyectoDeEjemplo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize light and dark theme colors -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorTertiary">@color/Tertiary</item>
        <item name="color">@color/background_color</item>
        <item name="colorOnPrimary">@color/text_color</item>
        <item name="colorOnSecondary">@color/icon_color</item>
    </style>

    <style
        name="AppTheme"
        parent="ThemeOverlay.Material3.DynamicColors.DayNight">
        ...
    </style>

    <!-- Light theme specifically for debugging -->
    <style name="debugging_theme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorTertiary">@color/Tertiary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorOnTertiary">@color/onTertiary</item>
        <item name="android:windowBackground">@color/Background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/brownish_words</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/brownish_words</item>
        <item name="android:textColor">@color/onTertiary</item>
        <item name="android:fontFamily">@font/simplerhand</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Custom style for buttons -->
    <style name="debugging_theme.buttons" parent="Widget.Material3.Button">
        <item name="android:background">@color/Primary</item>
        <item name="android:textColor">@color/onPrimary</item>
        <item name="android:fontFamily">@font/simplerhand</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CustomCalendarMonth" parent="debugging_theme">
        <item name="android:textColorPrimary">@color/Primary</item>
        <item name="android:textColorSecondary">@color/onSecondary</item>
    </style>

    <style name="CustomCalendarDay" parent="debugging_theme">
        <item name="android:textColor">@drawable/calendarstuff</item>
    </style>

    <style name="CalenderViewCustom" parent="debugging_theme">
        <item name="colorControlActivated">@color/Primary</item>
        <item name="android:textColorPrimaryInverse">@color/fatidic_orange</item>  // color of date selected.
    </style>

    <!-- Custom style for constraint layouts -->
    <style name="debugging_theme.ConstraintLayout">
        <item name="android:backgroundTint">@color/Background</item>
    </style>

    <!-- Custom style for RadioGroups views -->
    <style name="debugging_theme.RadioGroup" parent="@android:style/Widget.Material.Light.CompoundButton.RadioButton">
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:fontFamily">@font/simplerhand</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="debugging_theme.NavBar" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/Primary</item>
        <item name="itemTextColor">@color/onSecondary</item>
    </style>

    <style name="debugging_theme.NavBarItem" parent="Widget.Material3.BottomNavigationView">
        <item name="itemTextColor">@color/onSecondary</item>
        <item name="itemIconTint">@color/icon_color</item>
    </style>

    <!-- Custom style for text views -->
    <style name="debugging_theme.textViews">
        <item name="android:fontFamily">@font/simplerhand</item>
        <item name="android:textColor">@color/onSecondary</item>
        <item name="android:textSize">25sp</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <style name="debugging_theme.progressBarStyleHorizontal">
    </style>


    <style name="debugging_theme.textViews.notasview">
        <item name="android:fontFamily">@font/simplerhand</item>
        <item name="android:textColor">@color/brownish_words</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.ProyectoDeEjemplo" parent="Base.Theme.ProyectoDeEjemplo" />
</resources>
