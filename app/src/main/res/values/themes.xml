<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.ProyectoDeEjemplo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize light and dark theme colors -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorSecondary">@color/Secondary</item>
        <item name="colorTertiary">@color/Tertiary</item>
        <item name="color">@color/background_color</item>
        <item name="colorOnPrimary">@color/text_color</item>
        <item name="colorOnSecondary">@color/icon_color</item>
    </style>

    <!-- Light theme specifically for debugging -->
    <style name="debugging_theme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/choco_brown</item>
        <item name="colorSecondary">@color/chill_toast</item>
        <item name="colorTertiary">@color/fatidic_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/icon_color</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/brownish_words</item>
        <item name="colorSurfaceVariant">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/brownish_words</item>
        <item name="android:textColor">@color/brownish_words</item>
        <item name="android:fontFamily">@font/simplerhand</item>
    </style>

    <!-- Custom style for buttons -->
    <style name="debugging_theme.buttons" parent="Widget.Material3.Button">
        <item name="android:background">@color/accent_brown</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/simplerhand</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Custom style for text views -->
    <style name="debugging_theme.textViews">
        <item name="android:fontFamily">@font/simplerhand</item>
    </style>

    <style name="debugging_theme.textViews.notasview">
        <item name="android:fontFamily">@font/simplerhand</item>
        <item name="android:textColor">@color/brownish_words</item>
        <item name="android:letterSpacing">0.08</item>
    </style>

    <!-- Main application theme -->
    <style name="Theme.ProyectoDeEjemplo" parent="Base.Theme.ProyectoDeEjemplo" />
</resources>
